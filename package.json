{
  "name": "depgraph",
  "version": "1.0.0",
  "description": "A local CLI tool that parses import/require statements and creates an interactive dependency graph",
  "type": "module",
  "bin": {
    "depgraph": "./dist/cli.js"
  },
  "scripts": {
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:ui": "vite build",
    "build": "npm run build:cli && npm run build:ui",
    "dev": "vite"
  },
  "keywords": [
    "dependency",
    "graph",
    "imports",
    "cli",
    "react"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-force-graph-2d": "^1.29.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
